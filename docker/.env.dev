# RAGFlow Local Development Environment Configuration
# All services run locally on Mac

# ===== Database Type =====
DB_TYPE=postgres

# ===== Database Configuration =====
POSTGRES_HOST=postgres-dev
POSTGRES_PORT=5432
POSTGRES_USER=ragflow
POSTGRES_PASSWORD=ragflow_dev_pass
POSTGRES_DBNAME=ragflow
MAX_CONNECTIONS=50
STALE_TIMEOUT=30
POSTGRES_KEEPALIVES_IDLE=30
POSTGRES_KEEPALIVES_INTERVAL=10
POSTGRES_KEEPALIVES_COUNT=3

# ===== Elasticsearch Configuration =====
ES_HOST=elasticsearch-dev
ES_PORT=9200
ES_USER=elastic
ELASTIC_PASSWORD=ragflow_dev_pass
STACK_VERSION=8.11.0
MEM_LIMIT=2g

# ===== Redis Configuration =====
REDIS_HOST=redis-dev
REDIS_PORT=6379
REDIS_PASSWORD=ragflow_dev_pass
REDIS_USERNAME=

# ===== MinIO Configuration =====
MINIO_HOST=minio-dev
MINIO_PORT=9000
MINIO_USER=ragflow
MINIO_PASSWORD=ragflow_dev_pass
MINIO_BUCKET=ragflow
MINIO_PREFIX_PATH=
MINIO_CONSOLE_PORT=9002

# ===== RAGFlow Server Configuration =====
RAGFLOW_HOST=0.0.0.0
SVR_HTTP_PORT=9380
SVR_WEB_HTTP_PORT=8080
SVR_WEB_HTTPS_PORT=8443

# ===== Embedding Model (Optional - configure if using TEI) =====
TEI_HOST=host.docker.internal
TEI_PORT=6380
TEI_MODEL=BAAI/bge-large-zh-v1.5
