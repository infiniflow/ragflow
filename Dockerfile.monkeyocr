# Dockerfile.monkeyocr-complete
# Complete RAGFlow Dockerfile with MonkeyOCR integration
# Based on official RAGFlow Dockerfile with CUDA support added
# -----------------------------------------------------------------------------

# ========== BASE STAGE (Modified for CUDA) ==========
FROM nvidia/cuda:12.4.1-runtime-ubuntu22.04 AS base
USER root
SHELL ["/bin/bash", "-c"]

ARG NEED_MIRROR=0
ARG LIGHTEN=0
ENV LIGHTEN=${LIGHTEN}

WORKDIR /ragflow

# Copy models downloaded via download_deps.py (SAME AS OFFICIAL)
RUN mkdir -p /ragflow/rag/res/deepdoc /root/.ragflow
RUN --mount=type=bind,from=infiniflow/ragflow_deps:latest,source=/huggingface.co,target=/huggingface.co \
    cp /huggingface.co/InfiniFlow/huqie/huqie.txt.trie /ragflow/rag/res/ && \
    tar --exclude='.*' -cf - \
        /huggingface.co/InfiniFlow/text_concat_xgb_v1.0 \
        /huggingface.co/InfiniFlow/deepdoc \
        | tar -xf - --strip-components=3 -C /ragflow/rag/res/deepdoc
RUN --mount=type=bind,from=infiniflow/ragflow_deps:latest,source=/huggingface.co,target=/huggingface.co \
    if [ "$LIGHTEN" != "1" ]; then \
        (tar -cf - \
            /huggingface.co/BAAI/bge-large-zh-v1.5 \
            /huggingface.co/maidalun1020/bce-embedding-base_v1 \
            | tar -xf - --strip-components=2 -C /root/.ragflow) \
    fi

# TIKA server setup (SAME AS OFFICIAL)
RUN --mount=type=bind,from=infiniflow/ragflow_deps:latest,source=/,target=/deps \
    cp -r /deps/nltk_data /root/ && \
    cp /deps/tika-server-standard-3.0.0.jar /deps/tika-server-standard-3.0.0.jar.md5 /ragflow/ && \
    cp /deps/cl100k_base.tiktoken /ragflow/9b5ad71b2ce5302211f9c61530b329a4922fc6a4

ENV TIKA_SERVER_JAR="file:///ragflow/tika-server-standard-3.0.0.jar"
ENV DEBIAN_FRONTEND=noninteractive

# System packages installation (SAME AS OFFICIAL + CUDA support)
RUN --mount=type=cache,id=ragflow_apt,target=/var/cache/apt,sharing=locked \
    if [ "$NEED_MIRROR" == "1" ]; then \
        sed -i 's|http://ports.ubuntu.com|http://mirrors.tuna.tsinghua.edu.cn|g' /etc/apt/sources.list; \
        sed -i 's|http://archive.ubuntu.com|http://mirrors.tuna.tsinghua.edu.cn|g' /etc/apt/sources.list; \
    fi; \
    rm -f /etc/apt/apt.conf.d/docker-clean && \
    echo 'Binary::apt::APT::Keep-Downloaded-Packages "true";' > /etc/apt/apt.conf.d/keep-cache && \
    chmod 1777 /tmp && \
    apt update && \
    apt --no-install-recommends install -y ca-certificates && \
    apt update && \
    apt install -y libglib2.0-0 libglx-mesa0 libgl1 && \
    apt install -y pkg-config libicu-dev libgdiplus && \
    apt install -y default-jdk && \
    apt install -y libatk-bridge2.0-0 && \
    apt install -y libpython3-dev libgtk-4-1 libnss3 xdg-utils libgbm-dev && \
    apt install -y libjemalloc-dev && \
    apt install -y python3-pip pipx nginx unzip curl wget git vim less && \
    apt install -y ghostscript

# Python package manager setup (SAME AS OFFICIAL)
RUN if [ "$NEED_MIRROR" == "1" ]; then \
        pip3 config set global.index-url https://mirrors.aliyun.com/pypi/simple && \
        pip3 config set global.trusted-host mirrors.aliyun.com; \
        mkdir -p /etc/uv && \
        echo "[[index]]" > /etc/uv/uv.toml && \
        echo 'url = "https://mirrors.aliyun.com/pypi/simple"' >> /etc/uv/uv.toml && \
        echo "default = true" >> /etc/uv/uv.toml; \
    fi; \
    pipx install uv

ENV PYTHONDONTWRITEBYTECODE=1 DOTNET_SYSTEM_GLOBALIZATION_INVARIANT=1
ENV PATH="/root/.local/bin:$PATH"

# Node.js installation (SAME AS OFFICIAL)
RUN --mount=type=cache,id=ragflow_apt,target=/var/cache/apt,sharing=locked \
    curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt purge -y nodejs npm cargo && \
    apt autoremove -y && \
    apt update && \
    apt install -y nodejs

# Rust installation (SAME AS OFFICIAL)
RUN apt update && apt install -y curl build-essential \
    && if [ "$NEED_MIRROR" == "1" ]; then \
         export RUSTUP_DIST_SERVER="https://mirrors.tuna.tsinghua.edu.cn/rustup"; \
         export RUSTUP_UPDATE_ROOT="https://mirrors.tuna.tsinghua.edu.cn/rustup/rustup"; \
         echo "Using TUNA mirrors for Rustup."; \
       fi; \
    curl --proto '=https' --tlsv1.2 --http1.1 -sSf https://sh.rustup.rs | bash -s -- -y --profile minimal \
    && echo 'export PATH="/root/.cargo/bin:${PATH}"' >> /root/.bashrc

ENV PATH="/root/.cargo/bin:${PATH}"
RUN cargo --version && rustc --version

# Microsoft SQL Server ODBC driver (SAME AS OFFICIAL)
RUN --mount=type=cache,id=ragflow_apt,target=/var/cache/apt,sharing=locked \
    curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - && \
    curl https://packages.microsoft.com/config/ubuntu/22.04/prod.list > /etc/apt/sources.list.d/mssql-release.list && \
    apt update && \
    arch="$(uname -m)"; \
    if [ "$arch" = "arm64" ] || [ "$arch" = "aarch64" ]; then \
        ACCEPT_EULA=Y apt install -y unixodbc-dev msodbcsql18; \
    else \
        ACCEPT_EULA=Y apt install -y unixodbc-dev msodbcsql17; \
    fi || \
    { echo "Failed to install ODBC driver"; exit 1; }

# Chrome installation for Selenium (SAME AS OFFICIAL)
RUN --mount=type=bind,from=infiniflow/ragflow_deps:latest,source=/chrome-linux64-121-0-6167-85,target=/chrome-linux64.zip \
    unzip /chrome-linux64.zip && \
    mv chrome-linux64 /opt/chrome && \
    ln -s /opt/chrome/chrome /usr/local/bin/
RUN --mount=type=bind,from=infiniflow/ragflow_deps:latest,source=/chromedriver-linux64-121-0-6167-85,target=/chromedriver-linux64.zip \
    unzip -j /chromedriver-linux64.zip chromedriver-linux64/chromedriver && \
    mv chromedriver /usr/local/bin/ && \
    rm -f /usr/bin/google-chrome

# SSL libraries for aspose-slides (SAME AS OFFICIAL)
RUN --mount=type=bind,from=infiniflow/ragflow_deps:latest,source=/,target=/deps \
    if [ "$(uname -m)" = "x86_64" ]; then \
        dpkg -i /deps/libssl1.1_1.1.1f-1ubuntu2_amd64.deb; \
    elif [ "$(uname -m)" = "aarch64" ]; then \
        dpkg -i /deps/libssl1.1_1.1.1f-1ubuntu2_arm64.deb; \
    fi

# ========== BUILDER STAGE (SAME AS OFFICIAL) ==========
FROM base AS builder
USER root
WORKDIR /ragflow

# Install dependencies from uv.lock file (SAME AS OFFICIAL)
COPY pyproject.toml uv.lock ./
RUN --mount=type=cache,id=ragflow_uv,target=/root/.cache/uv,sharing=locked \
    if [ "$NEED_MIRROR" == "1" ]; then \
        sed -i 's|pypi.org|mirrors.aliyun.com/pypi|g' uv.lock; \
    else \
        sed -i 's|mirrors.aliyun.com/pypi|pypi.org|g' uv.lock; \
    fi; \
    if [ "$LIGHTEN" == "1" ]; then \
        uv sync --python 3.10 --frozen; \
    else \
        uv sync --python 3.10 --frozen --all-extras; \
    fi

# Build web frontend (SAME AS OFFICIAL)
COPY web web
COPY docs docs
RUN --mount=type=cache,id=ragflow_npm,target=/root/.npm,sharing=locked \
    cd web && npm install && npm run build

# Version information (SAME AS OFFICIAL)
COPY .git /ragflow/.git
RUN version_info=$(git describe --tags --match=v* --first-parent --always); \
    if [ "$LIGHTEN" == "1" ]; then \
        version_info="$version_info slim"; \
    else \
        version_info="$version_info full"; \
    fi; \
    echo "RAGFlow version: $version_info"; \
    echo $version_info > /ragflow/VERSION

# ========== PRODUCTION STAGE + MONKEYOCR ==========
FROM base AS production
USER root
WORKDIR /ragflow

# Copy RAGFlow application code (SAME AS OFFICIAL)
COPY web web
COPY api api
COPY conf conf
COPY deepdoc deepdoc
COPY rag rag
COPY agent agent
COPY graphrag graphrag
COPY agentic_reasoning agentic_reasoning
COPY pyproject.toml uv.lock ./
COPY mcp mcp
COPY plugin plugin

# ========== ADD MONKEYOCR INTEGRATION (NEW) ==========
# Copy MonkeyOCR source code
COPY monkeyocr monkeyocr

# Copy the virtual environment from the builder stage
COPY --from=builder /ragflow/.venv /ragflow/.venv

# Set up the environment to use the copied virtual environment
ENV VIRTUAL_ENV=/ragflow/.venv
ENV PATH="${VIRTUAL_ENV}/bin:${PATH}"
ENV PYTHONPATH=/ragflow/:/ragflow/monkeyocr
ENV HF_HUB_CACHE=/ragflow/monkeyocr/model_weight
ENV MODELSCOPE_CACHE=/ragflow/monkeyocr/model_weight
ENV CUDA_VISIBLE_DEVICES=0

# FIX: The copied venv is missing pip. Use ensurepip to install it.
RUN /ragflow/.venv/bin/python -m ensurepip --upgrade

# Now that pip is installed in the venv, install MonkeyOCR dependencies
RUN /ragflow/.venv/bin/python -m pip install qwen_vl_utils==0.0.10 huggingface_hub && \
    cd /ragflow/monkeyocr && \
    /ragflow/.venv/bin/python -m pip install -e . && \
    DISABLE_TURBOMIND=1 /ragflow/.venv/bin/python -m pip install git+https://github.com/InternLM/lmdeploy.git

# Create MonkeyOCR directories
RUN mkdir -p /ragflow/monkeyocr/cache /ragflow/monkeyocr/model_weight

# Download MonkeyOCR models (quantized version for efficiency)
WORKDIR /ragflow/monkeyocr
RUN --mount=type=cache,id=hf_cache,target=/root/.cache/huggingface,sharing=locked \
    python tools/download_model.py -t quantize || \
    (echo "Quantized model download failed, trying regular model..." && \
     python tools/download_model.py) || \
    (echo "HuggingFace download failed, trying ModelScope..." && \
     python tools/download_model.py -t modelscope) || \
    (echo "All download methods failed - models will be downloaded at runtime" && exit 0)

# Verify model download
RUN if [ -d "/ragflow/monkeyocr/model_weight" ] && [ "$(ls -A /ragflow/monkeyocr/model_weight)" ]; then \
        echo "✅ MonkeyOCR models downloaded successfully"; \
        ls -la /ragflow/monkeyocr/model_weight; \
    else \
        echo "⚠️  Models not found in cache - will download at runtime"; \
    fi

WORKDIR /ragflow

# ========== FINALIZE (SAME AS OFFICIAL) ==========
COPY docker/service_conf.yaml.template ./conf/service_conf.yaml.template
COPY docker/entrypoint.sh ./
RUN chmod +x ./entrypoint*.sh

# Copy compiled web pages (SAME AS OFFICIAL)
COPY --from=builder /ragflow/web/dist /ragflow/web/dist

# Copy version info (SAME AS OFFICIAL)
COPY --from=builder /ragflow/VERSION /ragflow/VERSION

ENTRYPOINT ["./entrypoint.sh"]